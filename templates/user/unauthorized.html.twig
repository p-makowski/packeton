{% extends "user/layout.html.twig" %}

{% block search_main %}
{% endblock %}

{% block flashMessages %}
{% endblock %}

{% block user_content %}
    <style>
        body {
            background-color: #f3f7fd;
        }
    </style>

    <div class="col-xs-12">
        {% block logo_cetral %}
            <div class="center-block" style="max-width: 45rem; text-align: center; margin-bottom: 1rem">
                <img src="{{ asset('packeton/img/logo.png') }}" style="height: 10rem;" alt="Packeton">
            </div>
        {% endblock %}

        {% block content_cetral %}
            <div class="center-block well-card" style="max-width: 45rem">
                {% block content_cetral_title %}
                {% endblock %}

                {% block flash_messages_cetral %}
                    {%- if app.session.flashbag.peekAll()|length > 0 %}
                        <div class="flash-container">
                            {%- for type, flashMessages in app.session.flashbag.all() %}
                                {%- for flashMessage in flashMessages %}
                                    {%- if 'fos_user_' in type %}
                                        <div class="alert alert-{{ type|replace({'fos_user_': ''}) }}">
                                            <p>{{ flashMessage|trans }}</p>
                                        </div>
                                    {%- else %}
                                        <div class="alert alert-{{ type }}">
                                            <p>{{ flashMessage|trans }}</p>
                                        </div>
                                    {%- endif %}
                                {%- endfor %}
                            {%- endfor %}
                        </div>
                    {%- endif %}
                {% endblock %}

                {% if error is defined and error is not empty %}
                    <div class="alert alert-warning">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}


                {% block content_cetral_form %}
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
